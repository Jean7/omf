<log4r_config>
  <pre_config>
    <global level="DEBUG"/>
    <parameter name="logFile" value="/var/log/omf-resmgr-5.4.log"/>
  </pre_config>
  <!-- outputers -->
  <outputter type="FileOutputter" name="log" level="DEBUG">
    <filename>#{logFile}</filename>
    <trunc>false</trunc>
    <formatter type="PatternFormatter" pattern="%d %l %C: %m" />
  </outputter>
<!--
  <outputter type="StdoutOutputter" name="console" level="INFO"/>
-->
  <!-- loggers -->
  <logger name="resourceManager" outputters="log" level="DEBUG" trace="true" />
</log4r_config>
