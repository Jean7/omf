div.page_header do
  h1 "Configuration Setup"
end

@config = config

div.page do
  form :action => "setup", :method => "post" do
    @config.each_key{|k|
      p "#{k.to_s.capitalize}"
      @config[k].each{|l,m|
        input :type => "text", :name => "#{k}:#{l}", :value => m[:value], :size => 30
        label " #{m[:desc]}"; br
      }
    }
    br
    input :type => "submit", :value => "Save"
  end
end